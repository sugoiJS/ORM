{
    "clearMocks": true,

    "coverageDirectory": "dist/coverage",

    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },

    "moduleFileExtensions": [
        "js",
        "ts",
        "json",
        "jsx",
        "node"
    ],


    "testMatch": [
        "**/dist/__tests__/**/?(*.)+(spec|test).js?(x)",
        "**/dist/__tests__/?(*.)+(spec|test).js?(x)",
        "**/dist/?(*.)+(spec|test).js?(x)"
    ],

    "testPathIgnorePatterns": [
        "\\\\node_modules\\\\"
    ]
}
